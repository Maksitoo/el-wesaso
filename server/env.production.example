# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN - VALHALLAMC
# ============================================
# Copia este archivo a .env y completa con tus valores reales

NODE_ENV=production
PORT=5000

# ============================================
# BASE DE DATOS - MySQL
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=minecraft_server
DB_USER=root
DB_PASSWORD=tu_password_mysql

# ============================================
# JWT - AUTENTICACIÓN
# ============================================
# Genera un secreto seguro: openssl rand -base64 32
JWT_SECRET=GENERA_UN_SECRETO_SUPER_SEGURO_DE_AL_MENOS_32_CARACTERES_AQUI
JWT_EXPIRE=7d

# ============================================
# CLIENTE
# ============================================
CLIENT_URL=https://valhallamc.lat

# ============================================
# STRIPE - PAGOS
# ============================================
# IMPORTANTE: Usa claves de PRODUCCIÓN (sk_live_ y pk_live_)
# No uses claves de prueba en producción
STRIPE_SECRET_KEY=sk_live_tu_clave_secreta_de_produccion
STRIPE_PUBLISHABLE_KEY=pk_live_tu_clave_publica_de_produccion
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret_de_produccion

# ============================================
# SERVIDOR MINECRAFT
# ============================================
MC_SERVER_IP=valhallamc.lat
MC_SERVER_PORT=25565

